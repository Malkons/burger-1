
<!-- Handlebars template created for the burgers to be eaten -->
<div id='eat'>
  <h2>Burgers to Eat:</h2>
  <ul>
    {{#each burgers}} {{#unless this.eaten}}
    <li>
      {{> burgers/burger-block eaten=true}}
    </li>
    {{/unless}} {{/each}}
  </ul>
</div>
<div id='eaten'>
  <h2>Burgers That We Have Eaten:</h2>


<!-- Handlebars template created for the burgers that HAVE been eaten -->
  <ul>
    {{#each burgers}} {{#if this.eaten}}
    <li>
      {{this.id}}. {{name}}
      <td><button class="delete-burger" data-id="{{this.id}}">Use the restroom.</button></td>
    </li>
    {{/if}} {{/each}}
  </ul>
</div>



<!-- Place to submit new burgers! -->
<form class="create-form">
  <div class="form-group">
    <label for="ca">What kind of burger would you like to order?</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add this Burger!</button>
</form>